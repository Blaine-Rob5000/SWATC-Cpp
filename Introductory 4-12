// Assignment: Introductory 4-12
// calculate theatre revenue based on ticket sales
// created by: Robin Blaine, 5-26-2017

#include <iostream>
using namespace std;

int main()
{
  // declare constants and variables
  const int ORCHESTRA_PRICE = 25;
  const int MAIN_PRICE      = 30;
  const int BALCONY_PRICE   = 15;
  int orchestraSold         = 0;
  int mainSold              = 0;
  int balconySold           = 0;
  int orchestraRevenue      = 0;
  int mainRevenue           = 0;
  int balconyRevenue        = 0;
  int totalRevenue          = 0;
    
  // enter input items
  cout << “Enter the number of orchestra tickets sold: “;
  cin >> orchestraSold;
  cout << “Enter the number of main floor tickets sold: “;
  cin >> mainSold;
  cout << “Enter the number of balcony tickets sold: “;
  cin >> balconySold;
  
  // calculate revenues
  orchestraRevenue = orchestraSold * ORCHESTRA_PRICE;
  mainRevenue      = mainSold * MAIN_PRICE;
  balconyRevenue   = balconySold * BALCONY_PRICE;
  totalRevenue     = orchestraRevenue + mainRevenue + balconyRevenue;
  
  // display revenues
  cout << “Orchestra ticket revenue: “ << orchestraRevenue << endl;
  cout << “Main floor ticket revenue: “ << mainRevenue << endl;
  cout  << “Balcony ticket revenue: “ << balconyRevenue << endl;
  cout << “Total revenue: “ << totalRevenue << endl;
  
  system("pause");
  return 0;
} // end of main function
